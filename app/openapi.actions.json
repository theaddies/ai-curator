{
  "openapi": "3.1.0",
  "info": { "title": "AI Curator API", "version": "1.0.0" },
  "servers": [{ "url": "http://YOUR-VM-IP:8080" }],
  "paths": {
    "/run-digest": {
      "get": { "operationId": "runDigestNow", "description": "Pull new AI links from NYT & The Economist and rebuild today's digest." }
    },
    "/digest/today": {
      "get": { "operationId": "getDigest", "description": "Get today's curated AI links." }
    },
    "/approve": {
      "post": {
        "operationId": "approveItems",
        "description": "Save selected items to Instapaper (explicit per-item action).",
        "requestBody": {
          "required": true,
          "content": { "application/json": {
            "schema": { "type": "object", "properties": { "ids": { "type": "array", "items": { "type": "string" } } }, "required": ["ids"] }
          }}
        }
      }
    }
  }
}
